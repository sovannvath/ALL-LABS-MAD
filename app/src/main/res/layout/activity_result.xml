<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Your Expense, Ny sreynit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lastExpenseTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My last expense was 0 "
        android:textSize="18sp"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addNewExpenseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add New Expense"
        android:backgroundTint="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/lastExpenseTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/viewDetailExpenseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Detail Expense"
        android:backgroundTint="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/addNewExpenseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
